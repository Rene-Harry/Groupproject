<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#93b14e"
    tools:context=".Serving">

    <ImageView
        android:id="@+id/table1"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/servingtable"


        />

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/table1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/cardbg"
        android:padding="5dp"
        android:text="Table gives further information on how to interpret the number of servings required for low, moderate and high kilocalorie diets. This is essential when kilocalorie restriction is desired." />

    <ImageView
        android:id="@+id/table2"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_below="@+id/txt"
        android:layout_marginLeft="7dp"
        android:src="@drawable/serving2"


        />





</RelativeLayout>